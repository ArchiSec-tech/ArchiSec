// Firestore Security Rules per ArchiSec
// Applica queste regole nella Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Collezione users - ogni utente può leggere/scrivere solo i propri dati
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validazione dei campi obbligatori per la scrittura
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['name', 'email', 'createdAt', 'role', 'isActive'])
        && request.resource.data.email == request.auth.token.email
        && request.resource.data.role == 'user'
        && request.resource.data.isActive == true;
        
      // Aggiornamento profilo (non può cambiare ruolo/stato)
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && (!('role' in resource.data) || request.resource.data.role == resource.data.role)
        && (!('isActive' in resource.data) || request.resource.data.isActive == resource.data.isActive);
    }
    
    // Collezione per richieste di consulenza/contatti
    match /consultations/{docId} {
      // Solo utenti autenticati possono creare richieste
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      
      // Solo l'autore può leggere le proprie richieste
      allow read: if request.auth != null 
        && resource.data.userId == request.auth.uid;
    }
    
    // Collezione per log di sicurezza (solo lettura per utenti, scrittura per admin)
    match /security_logs/{docId} {
      allow read: if request.auth != null;
      // Scrittura riservata agli admin (da implementare lato server)
    }
    
    // Collezione pubblica per pricing/servizi (solo lettura)
    match /public/{docId} {
      allow read: if true; // Accessibile anche senza auth
    }
    
    // Tutto il resto è negato di default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

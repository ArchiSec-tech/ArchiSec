// Firestore Security Rules per ArchiSec - VERSIONE AGGIORNATA
// Applica queste regole nella Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Collezione users - ogni utente può leggere/scrivere solo i propri dati
    match /users/{userId} {
      // Lettura: solo il proprietario del documento
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Creazione: utente autenticato può creare il proprio profilo
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['name', 'email', 'createdAt'])
        && request.resource.data.email == request.auth.token.email;
        
      // Aggiornamento: solo il proprietario può modificare i propri dati
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && request.auth.token.email == resource.data.email;
        
      // Cancellazione: solo il proprietario
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Collezione per richieste di consulenza - PERMESSI PIÙ APERTI
    match /consultations/{docId} {
      // Creazione: chiunque può inviare una richiesta (lead capture)
      allow create: if true;
      
      // Lettura: utenti autenticati possono leggere le proprie richieste
      allow read: if request.auth != null 
        && (resource.data.userId == request.auth.uid 
            || resource.data.userEmail == request.auth.token.email);
            
      // Aggiornamento: solo chi ha creato la richiesta
      allow update: if request.auth != null 
        && (resource.data.userId == request.auth.uid 
            || resource.data.userEmail == request.auth.token.email);
    }
    
    // Collezione contatti - PERMESSI APERTI per lead generation
    match /contacts/{docId} {
      // Creazione: chiunque può contattare (anche anonimi)
      allow create: if true;
      
      // Lettura: utenti autenticati possono leggere i propri contatti
      allow read: if request.auth != null 
        && (resource.data.userId == request.auth.uid 
            || resource.data.userEmail == request.auth.token.email);
            
      // Aggiornamento: solo chi ha creato il contatto
      allow update: if request.auth != null 
        && (resource.data.userId == request.auth.uid 
            || resource.data.userEmail == request.auth.token.email);
    }
    
    // Collezione newsletter - COMPLETAMENTE APERTA
    match /newsletter_subscriptions/{docId} {
      allow create, read, update, delete: if true;
    }
    
    // Collezioni per analytics - PERMESSI APERTI per funzionamento
    match /leads/{docId} {
      allow create, read, update, delete: if true;
    }
    
    match /user_analytics/{docId} {
      allow create, read, update: if true;
      allow delete: if request.auth != null;
    }
    
    match /user_sessions/{docId} {
      allow create, read, update, delete: if true;
    }
    
    match /business_metrics/{docId} {
      allow create, read, update: if true;
      allow delete: if request.auth != null;
    }
    
    match /conversions/{docId} {
      allow create, read, update, delete: if true;
    }
    
    match /lead_conversions/{docId} {
      allow create, read, update, delete: if true;
    }
    
    // Collezione blog comments - PUBBLICA
    match /blog_comments/{docId} {
      // Creazione: chiunque può commentare
      allow create: if true;
      
      // Lettura: tutti possono leggere commenti pubblici
      allow read: if true;
      
      // Aggiornamento: solo l'autore del commento
      allow update: if request.auth != null 
        && resource.data.userId == request.auth.uid;
        
      // Cancellazione: solo l'autore
      allow delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
    }
    
    // Collezioni di servizio - PERMESSI APERTI
    match /security_logs/{docId} {
      allow create, read, update: if true;
      allow delete: if request.auth != null;
    }
    
    match /public/{docId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    match /demo_requests/{docId} {
      allow create: if true;
      allow read, update: if request.auth != null;
    }
    
    match /pricing_inquiries/{docId} {
      allow create: if true;
      allow read, update: if request.auth != null;
    }
    
    match /service_interactions/{docId} {
      allow create, read, update: if true;
      allow delete: if request.auth != null;
    }
    
    // Collezione per admin/supporto - SOLO LETTURA per debug
    match /admin_logs/{docId} {
      allow create, read: if true;
      allow update, delete: if request.auth != null;
    }
    
    // Collezione temporanea per test - COMPLETAMENTE APERTA
    match /temp_data/{docId} {
      allow create, read, update, delete: if true;
    }
    
    // REGOLA DI DEFAULT - PIÙ PERMISSIVA per sviluppo
    match /{document=**} {
      // Durante sviluppo: permetti lettura/scrittura a tutti gli utenti autenticati
      allow read, write: if request.auth != null;
      
      // Permetti creazione anche ad anonimi per lead capture
      allow create: if true;
    }
  }
}
